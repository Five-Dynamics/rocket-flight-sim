# Version: 1.0.0 (Using https://semver.org/)
# Updated: 2025-02-10
# See https://editorconfig.org/ for more information about .editorconfig files.

##########################################
# Common Settings
##########################################

# This file is the top-most EditorConfig file
root = true

# All Files
[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf

##########################################
# Python-Specific Settings
##########################################

[*.py]
# Enforce UTF-8 encoding
charset = utf-8

# Enforce spaces instead of tabs
indent_style = space
indent_size = 4

# Trim trailing whitespace on save
trim_trailing_whitespace = true

# Ensure files end with a newline
insert_final_newline = true

# Enforce line length of 88 characters (PEP 8 & Black)
max_line_length = 88

# Ensure import sorting (use with isort)
python_sort_imports = true

# Set Python docstring style (Google or Numpy format)
python_docstring_style = google

# Enforce single-quotes for strings where possible
python_string_quotes = single

# Enforce type hinting rules
python_type_hints = true

##########################################
# Formatting Rules
##########################################

# Enforce PEP 8 formatting standards
[*.py]
# Allow trailing commas (Black-style formatting)
python_trailing_commas = true

# Force blank line after function/class definitions (PEP 257)
python_blank_lines_after_functions = 1
python_blank_lines_after_classes = 2

# Indentation inside multi-line structures should be aligned
python_multiline_indent = align

# Set whether to allow explicit parentheses around single expressions
python_parentheses_around_expressions = true

# Disallow multiple statements on a single line
python_multiple_statements_on_line = false

##########################################
# Naming Conventions
##########################################

# Enforce snake_case for function and variable names
python_naming_convention_functions = snake_case
python_naming_convention_variables = snake_case

# Enforce PascalCase for class names
python_naming_convention_classes = PascalCase

# Enforce UPPER_CASE for constants
python_naming_convention_constants = UPPER_CASE

# Enforce lowercase for module names
python_naming_convention_modules = lowercase

##########################################
# Code Linting Rules (For Integration with Linters)
##########################################

# Pylint settings
pylint_max_line_length = 88
pylint_disable_rules = C0114,C0115,C0116  # Disable missing docstrings warnings

# Flake8 settings
flake8_max_line_length = 88
flake8_ignore_rules = E203,W503  # Compatible with Black formatter

# Mypy type-checking settings
mypy_strict_optional = true
mypy_ignore_missing_imports = true

##########################################
# Python Testing Files
##########################################

# Apply different rules for test files
[test_*.py]
# Allow longer line length for test files
max_line_length = 120

# Test function naming convention should start with `test_`
python_naming_convention_functions = test_case

##########################################
# Virtual Environment & Dependency Files
##########################################

# Ignore trailing whitespace for requirements files
[requirements*.txt]
trim_trailing_whitespace = false

# Ignore indentation settings for YAML files
[*.yml]
indent_size = 2

# Ignore indentation settings for JSON files
[*.json]
indent_size = 2
